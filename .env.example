# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_API_SECRET=your_polymarket_secret
POLYMARKET_API_URL=https://api.polymarket.com

# Bitquery API (whale detection via on-chain data)
# Get API key from https://bitquery.io
# Free tier: 10,000 credits/day
BITQUERY_API_KEY=your_bitquery_api_key

# Polymarket Builder API (gasless transactions)
BUILDER_API_KEY=your_builder_api_key
BUILDER_API_SECRET=your_builder_secret
BUILDER_PASSPHRASE=your_builder_passphrase

# Bybit API
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_secret
BYBIT_API_URL=https://api.bybit.com
BYBIT_TESTNET=false

# MetaMask / Web3
METAMASK_PRIVATE_KEY=0xyour_private_key_here
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
CHAIN_ID=137

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5433/polymarket
REDIS_URL=redis://localhost:6379/0

# Trading Parameters
INITIAL_BANKROLL=100.00
TRADING_MODE=paper  # paper or live
MIN_EDGE_BPS=10     # Minimum edge in basis points
MAX_POSITION_PCT=25 # Max % of bankroll per trade (Kelly Criterion)

# Risk Management
RISK_MAX_DRAWDOWN=0.02        # 2% daily drawdown limit
RISK_KILL_SWITCH_ENABLED=true
RISK_MAX_CONCURRENT_TRADES=10
RISK_BAN_DETECTION=true

# Monitoring
TELEGRAM_ALERT_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# Development
DEBUG=false
ENVIRONMENT=development  # development, staging, production
