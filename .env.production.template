# Polymarket Trading Bot - Production Environment Template
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# API KEYS - GET THESE FROM RESPECTIVE PLATFORMS
# =============================================================================

# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_API_SECRET=your_polymarket_secret
POLYMARKET_API_URL=https://api.polymarket.com

# Bitquery API (whale detection via on-chain data)
# Get API key from https://bitquery.io
BITQUERY_API_KEY=your_bitquery_api_key

# Polymarket Builder API (gasless transactions)
BUILDER_API_KEY=your_builder_api_key
BUILDER_API_SECRET=your_builder_secret
BUILDER_PASSPHRASE=your_builder_passphrase

# Bybit API
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_secret
BYBIT_API_URL=https://api.bybit.com
BYBIT_TESTNET=false

# MetaMask / Web3
# WARNING: Use a fresh wallet with minimal funds for trading
METAMASK_PRIVATE_KEY=0xyour_private_key_here
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
CHAIN_ID=137

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL (use internal Docker networking in production)
DATABASE_URL=postgresql://postgres:changeme@postgres:5432/polymarket

# Redis (use internal Docker networking in production)
REDIS_URL=redis://redis:6379/0

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Initial capital
INITIAL_BANKROLL=100.00

# Trading mode: paper or live
TRADING_MODE=paper

# Minimum edge in basis points (default: 10 bps = 0.1%)
MIN_EDGE_BPS=10

# Maximum position as % of bankroll (Kelly Criterion)
MAX_POSITION_PCT=25

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Maximum daily drawdown (default: 2%)
RISK_MAX_DRAWDOWN=0.02

# Enable kill switch
RISK_KILL_SWITCH_ENABLED=true

# Maximum concurrent trades
RISK_MAX_CONCURRENT_TRADES=10

# Enable BAN detection
RISK_BAN_DETECTION=true

# =============================================================================
# MONITORING - REQUIRED FOR PRODUCTION
# =============================================================================

# Telegram Bot Alerts (REQUIRED)
# Create bot via @BotFather, get chat ID via @userinfobot
TELEGRAM_ALERT_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Optional: Sentry for error tracking
SENTRY_DSN=

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=production

# Debug mode (disable in production)
DEBUG=false

# Enable metrics collection
METRICS_ENABLED=true

# Metrics port (Prometheus endpoint)
METRICS_PORT=9090
